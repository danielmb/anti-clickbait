{
  "manifest_version": 3,
  "name": "Clickbait Eraser",
  "version": "1.0.1",
  "description": "Erstatt clickbait artikler med AI genererte tekster",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://www.dagbladet.no/*", "https://www.an.no/*"]
    }
  ],
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:3000/*", "https://www.dagbladet.no/*"]
}
