{
  "manifest_version": 3,
  "name": "Clickbait Eraser",
  "version": "1.0.1",
  "description": "Erstatt clickbait artikler med AI genererte tekster",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/websites/an.js"],
      "matches": ["https://www.an.no/*"]
    },
    {
      "js": ["scripts/websites/dagbladet.js"],
      "matches": ["https://www.dagbladet.no/*"]
    }
  ],
  "permissions": ["storage"],
  "host_permissions": [
    "http://therack.ddns.net:30000/*",
    "https://www.dagbladet.no/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/lib/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
